@model PracticeNotice.Models.Notice

@{
    ViewData["Title"] = "등록";
}

<h1>게시판</h1>
<br />
<h4>게시글 작성</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label">제목</label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">작성자</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">내용</label>
                <textarea asp-for="Content" class="form-control" rows="10" ></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label">파일</label>
                <input type="file" asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <span style="float:right;">
                    <a asp-action="Index" class="btn btn-dark">목록</a>
                </span>
                <span class="form-group" style="float:right; margin-right:2px;">
                    <input type="submit" value="등록" class="btn btn-primary" />
                </span>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
