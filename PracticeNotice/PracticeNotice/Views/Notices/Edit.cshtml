@model PracticeNotice.Models.Notice

@{
    ViewData["Title"] = "수정";
}
<h1>게시판</h1>
<br />
<h4>게시글 수정</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idx" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">제목</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label">작성자</label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">내용</label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label">파일</label>
                @if (Model.FileName != "")
                { 
                <p><a href="/file/@Model.FileName" target="_blank">이전 파일 확인하기</a></p>
                }
                <input type="file" asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <span style="float:right;">
                    <a asp-action="Index" class="btn btn-dark">목록</a>
                </span>
                <span class="form-group" style="float:right; margin-right:2px;">
                    <input type="submit" value="수정" class="btn btn-primary" />
                </span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
