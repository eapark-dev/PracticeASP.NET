@model IEnumerable<PracticeNotice.Models.Notice>

@{
    ViewData["Title"] = "목록";

}

<h1>게시판</h1>
<form asp-action="Index" asp-controller="Notices" method="get">
        <div class="col-lg-5" style="float:right;">
            <div class="input-group">
            <select name="SearchType" class="custom-select" id="SearchType">
                <option value="All">전체</option>
                <option value="Name">이름</option>
                <option value="Subject">제목</option>
            </select>
            <input type="text" name="SearchString" class="form-control" value="@ViewBag.SearchString" />
            <input type="submit" value="검색" class="btn btn-sm btn-light" />
            </div>
        </div>
</form>
<table class="table mt-5">
    <thead>
        <tr>
            <th>
                번호
            </th>
            <th>
                제목
            </th>
            <th>
                이름
            </th>
            <th>
                첨부파일
            </th>
            <th>
                등록일
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            int cnt = Model.Count();
            @foreach (var item in Model)
            {
                <tr>
                    <td>@cnt</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Idx">
                            @Html.DisplayFor(modelItem => item.Subject)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @if (item.FileName != "")
                        {
                            <a class="btn btn-sm btn-primary" href="/file/@Html.DisplayFor(modelItem => item.FileName)" target="_blank">보기</a>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegDate)
                    </td>
                </tr>
                cnt = cnt - 1;
            }
        }
        else
        {
            <tr><td colspan=5 class="text-center">존재하는 데이터가 없습니다.</td></tr>
        }
    </tbody>
</table>
<br />
<p style="float:right">
    <a asp-action="Create" class="btn btn-dark btn-sm">등록</a>
</p>
<script>
    const selectName = document.getElementById("SearchType");
    const len = selectName.options.length;

    for(let i=0; i<len; i++){
        if(selectName.options[i].value == "@TempData["searchTypeData"]")
        {
            selectName.options[i].selected = true;
        }
    }
</script>